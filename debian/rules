#!/usr/bin/make -f

#export DH_VERBOSE=1

PACKAGE = stterm
ORIGBIN = st
BIN	= $(PACKAGE)

include debian/debian-vars.mk

man:
	$(MAKE) -C debian -f pod2man.mk PACKAGE=$(PACKAGE) makeman

install: build man
	# target: install
	$(MAKE) PREFIX=/usr DESTDIR=$(PKGDIR) install

	# Rename binary to reflect "term"
	mv $(BINDIR)/$(ORIGBIN) $(BINDIR)/$(BIN)

binary: install
	# target: binary (binary-arch) -- Build architecture-dependent files
	dh_testdir
	dh_testroot
	dh_installman
	dh_installchangelogs
	dh_installdocs
	dh_installexamples
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

%:
	dh "$@"

.PHONY: man install binary

# End of file
